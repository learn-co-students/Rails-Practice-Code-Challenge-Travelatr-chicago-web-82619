<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end  %>

<%= form_with model: @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.label :blogger %>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name %>
    <%= f.collection_select :destination_id, Destination.all, :id, :name %>
    <%= f.submit %>
<% end  %>
